<CalculatorLayout>:
    orientation: "vertical"
    padding: 10
    spacing: 10
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1  # Dark gray background
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        size_hint_y: 0.2
        padding: 10
        canvas.before:
            Color:
                rgba: 0.15, 0.15, 0.15, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            id: display
            text: app.expression
            font_size: '36sp'
            color: 1, 1, 1, 1
            halign: "right"
            valign: "middle"
            text_size: self.size

    GridLayout:
        cols: 4
        spacing: 5
        size_hint_y: 0.8
        Button:
            text: "7"
            on_press: app.tap(self.text)
        Button:
            text: "8"
            on_press: app.tap(self.text)
        Button:
            text: "9"
            on_press: app.tap(self.text)
        Button:
            text: "/"
            on_press: app.tap(self.text)

        Button:
            text: "4"
            on_press: app.tap(self.text)
        Button:
            text: "5"
            on_press: app.tap(self.text)
        Button:
            text: "6"
            on_press: app.tap(self.text)
        Button:
            text: "*"
            on_press: app.tap(self.text)

        Button:
            text: "1"
            on_press: app.tap(self.text)
        Button:
            text: "2"
            on_press: app.tap(self.text)
        Button:
            text: "3"
            on_press: app.tap(self.text)
        Button:
            text: "-"
            on_press: app.tap(self.text)

        Button:
            text: "0"
            on_press: app.tap(self.text)
        Button:
            text: "."
            on_press: app.tap(self.text)
        Button:
            text: "="
            on_press: app.calculate()
        Button:
            text: "+"
            on_press: app.tap(self.text)

        Button:
            text: "C"
            on_press: app.clear_expr()
            background_color: 1, 0, 0, 1
